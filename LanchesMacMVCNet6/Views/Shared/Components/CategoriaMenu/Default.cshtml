@model IEnumerable<Categoria>

<div class="dropdown">

    <a class="btn btn-secondary dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-bs-toggle="dropdown" aria-expanded="false">
        Produtos
    </a>

    <ul class="dropdown-menu">
        @foreach (var categoria in Model)
        {
            <li>
                <a asp-controller="Lanche" asp-action="List" style="color:black" class="dropdown-item"
               asp-route-categoria="@categoria.CategoriaNome">@categoria.CategoriaNome</a>
            </li>
        }
        <li class="dropdown-divider"></li>
        <li>
            <a asp-controller="Lanche" asp-action="List" asp-route-categoria="" class="dropdown-item"
               style="color:black">Todos os Produtos</a>
        </li>
    </ul>
</div>